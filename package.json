{
  "name": "wid-kit",
  "type": "module",
  "author": "auu",
  "version": "0.0.1",
  "description": "various project boilerplate creation and tool scaffolding powered by clack",
  "main": "src/index.ts",
  "bin": {
    "wid": "bin/index.js"
  },
  "scripts": {
    "start": "tsup --watch --env.NODE_ENV development",
    "build": "tsup --env.NODE_ENV production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "wid init --boilerplate"
  },
  "license": "MIT",
  "keywords": [
    "cli",
    "boilerplate generator"
  ],
  "dependencies": {
    "@clack/core": "^0.3.3",
    "@clack/prompts": "^0.7.0",
    "cac": "^6.7.14",
    "picocolors": "^1.0.0",
    "simple-git": "^3.21.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.3.4",
    "@types/node": "^20.10.3",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
